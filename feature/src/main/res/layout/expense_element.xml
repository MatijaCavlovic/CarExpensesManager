<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/checkbox_margin"
    android:paddingTop="@dimen/checkbox_margin">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/checkbox_margin"
            android:paddingRight="@dimen/toolbar_image_margin"
            android:text="no."
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descriptionTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/checkbox_margin"
            android:text="opis"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/checkbox_margin"
            android:paddingLeft="45dp"
            android:paddingRight="@dimen/checkbox_margin"

            android:text="Cijena:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/priceTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/priceLabel"
            android:text="TextView"
            android:textSize="20dp" />


    </RelativeLayout>


</LinearLayout>