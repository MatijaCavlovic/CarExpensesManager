<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Detalji o korisniku"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/checkbox_margin"
        android:paddingLeft="@dimen/toolbar_image_margin"
        android:paddingTop="@dimen/checkbox_margin"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/checkbox_margin"
        android:paddingLeft="@dimen/toolbar_image_margin"
        android:paddingTop="@dimen/checkbox_margin"
        android:textSize="20dp"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addCarBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/checkbox_margin"
                android:paddingRight="@dimen/checkbox_margin"
                android:text="Dodaj automobil" />

            <Button
                android:id="@+id/deleteUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/checkbox_margin"
                android:paddingRight="@dimen/checkbox_margin"
                android:text="IzbriÅ¡i korisnika" />
        </LinearLayout>
    </RelativeLayout>


</android.widget.LinearLayout>